# Root directory path
ROOT_DIR=

# Environment mode (dev, prod, test)
NODE_ENV=dev

# Database connection URL
DATABASE_URL=

# Maximum hours threshold between found and lost date
DATE_MATCHING_THRESHOLD=12

# Translation service endpoint
LIBRE_TRANSLATION_ENDPOINT=http://localhost:5000/translate

# Name of the model used for text processing
XENOVA_MODEL=Xenova/all-MiniLM-L6-v2

# Similarity threshold for text matching (0 to 1)
TEXT_SIMILARITY_THRESHOLD=0.5

# Number of lost items processed in each cycle
ALGORITHM_BLOCK_SIZE=4

# Timeout between matching cycles in milliseconds
MATCHING_CYCLE_TIMEOUT=5000

# Application port (1-65535)
PORT=3000
